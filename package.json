{
  "name": "resumemo",
  "private": true,
  "workspaces": ["web", "api", "packages/*"],
  "packageManager": "bun@1.3.6",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "concurrently \"bun run web:start\" \"bun run api:start\"",
    "web": "bun run --filter web dev",
    "api": "bun run --filter api dev",
    "web:start": "bun run --filter web preview",
    "api:start": "bun run --filter api start",
    "web:build": "bun run --filter web build",
    "api:build": "bun run --filter api build",
    "lint": "turbo lint",
    "clean": "turbo clean && rimraf node_modules web/node_modules api/node_modules packages/*/node_modules"
  },
  "overrides": {
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^6.1.2",
    "turbo": "^2.7.6"
  }
}
