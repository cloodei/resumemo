{
  "name": "resumemo",
  "private": true,
  "workspaces": ["frontend", "backend", "packages/*"],
  "packageManager": "bun@1.3.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "concurrently \"bun run frontend:start\" \"bun run backend:start\"",
    "frontend": "bun run --filter frontend dev",
    "backend": "bun run --filter backend dev",
    "frontend:start": "bun run --filter frontend start",
    "backend:start": "bun run --filter backend start",
    "frontend:build": "bun run --filter frontend build",
    "backend:build": "bun run --filter backend build",
    "lint": "turbo lint",
    "clean": "turbo clean && rimraf node_modules frontend/node_modules backend/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^6.1.2",
    "turbo": "^2.7.5"
  }
}
